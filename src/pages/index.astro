---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'xPatLife: Your Guide to Living and Working in Germany',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Read the Guide',
        href: '/guide',
        icon: 'tabler:book',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/airport.jpg', alt: 'xPatLife' }}
  >
    <Fragment slot="title">
      xPatLife
      <br />
      <span class="text-3xl md:text-4xl">Living and Working in Germany</span>
    </Fragment>

    <Fragment slot="subtitle">
      A Practical and Legal Guide for <span class="font-semibold">Expats</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Philosophy:" description="Simplicity, Best Practices and High Performance" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Why Choose xPatLife?"
    title="Empowering Your Journey to Germany"
    subtitle="Your ultimate companion for a smooth, informed, and successful relocation experience."
    items={[
      {
        title: 'Expert Guidance Tailored for Expats',
        description:
          'Navigate the complexities of moving to Germany with clear, practical advice designed specifically for expats.',
        icon: 'tabler:building-airport',
      },
      {
        title: 'Comprehensive Resources at Your Fingertips',
        description:
          'Access ready-to-use tools and information covering visas, housing, employment, healthcare, and more.',
        icon: 'tabler:components',
      },
      {
        title: 'Proven Best Practices for a Seamless Move',
        description: 'Benefit from strategies that ensure a secure, efficient, and stress-free relocation process.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Optimized for Speed and Accessibility',
        description: 'Experience fast-loading pages and intuitive navigation that keep you informed without delay.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Boost Your Visibility and Confidence',
        description: 'Gain insights that help you confidently integrate and thrive in your new German environment.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Community-Driven and Continuously Evolving',
        description:
          'Join a vibrant community that embraces new ideas, feedback, and contributions to enhance your experience.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Your Guide Inside xPatLife"
    title="Modern Foundations for Your Expat Journey"
    items={[
      {
        title: 'Built on Trusted Expertise',
        description:
          'Leverage insights crafted from years of experience helping expats successfully settle in Germany.',
      },
      {
        title: 'Clear and Practical Information',
        description:
          'Navigate your move with confidence using straightforward, actionable guidance tailored to your needs.',
      },
      {
        title: 'Accessible Anytime, Anywhere',
        description:
          'Enjoy seamless access to vital information across all your devices, ensuring support whenever you need it.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Built for Your Success</h3>
      Empowering you with the knowledge to thrive in Germany
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Tailored to Your Needs',
        description: `Customize your experience to fit your unique expat journey, making every step easier and more relevant.`,
      },
      {
        title: 'Flexible and Intuitive Layouts',
        description:
          'Discover layouts designed to present information clearly, helping you find what matters most quickly.',
      },
      {
        title: 'Responsive Across Devices',
        description:
          'Access your guide seamlessly on any device, whether at home or on the go, for uninterrupted support.',
      },
      {
        title: 'Rich Multimedia Integration',
        description:
          'Engage with helpful images, videos, and interactive content that bring your relocation journey to life.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1594450280609-3cacc7c4179f?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">Your relocation journey, supported every step of the way.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Engaging and Intuitive Experience',
        description:
          'Stay connected with interactive tools and clear navigation designed to keep you informed and engaged.',
      },
      {
        title: 'Always Evolving',
        description:
          'Benefit from continuous updates that keep the content fresh, relevant, and aligned with the latest expat needs.',
      },
      {
        title: 'Save Time and Effort',
        description:
          'Avoid the hassle of starting from scratch—our comprehensive guide accelerates your relocation process.',
      },
      {
        title: 'Supportive Community',
        description: `Join a vibrant network of expats and experts ready to assist you throughout your journey.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1625283518288-00362afc8663?q=80&w=685&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">Empowering your success in Germany.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Start Your Expat Journey with Confidence Using xPatLife"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Explore Our Resources</span>',
        description:
          'Dive into comprehensive guides and tools tailored to your needs, making your move to Germany smoother and more informed.',
        icon: 'tabler:package',
      },
      {
        title: 'Step 2: <span class="font-medium">Plan Your Move</span>',
        description:
          'Use our practical checklists and expert advice to organize your relocation efficiently and avoid common pitfalls.',
        icon: 'tabler:letter-case',
      },
      {
        title: 'Step 3: <span class="font-medium">Settle and Thrive</span>',
        description:
          'Access ongoing support and community insights to help you integrate and succeed in your new home.',
        icon: 'tabler:paint',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1542596594-649edbc13630?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Essential Components for Expats"
    subtitle="Key features designed to simplify your relocation experience"
    tagline="What We Offer"
    items={[
      {
        title: 'Clear Navigation Headers',
        description: 'Guiding you effortlessly through every step of your move.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Impactful Hero Sections',
        description: 'Captivating introductions that highlight the most important information for your journey.',
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Powerful Feature Highlights',
        description: 'Showcasing the core benefits and tools that make your relocation easier and more successful.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Comprehensive Content Areas',
        description: 'Providing in-depth information and resources tailored to expat needs.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Effective Call-to-Action Buttons',
        description: 'Encouraging you to take the next step with confidence and clarity.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Transparent Pricing Information',
        description: 'Clear and straightforward details to help you plan your budget.',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Authentic Testimonials',
        description: 'Real stories and feedback from expats who have successfully relocated.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Responsive Contact Options',
        description: 'Easy ways to get in touch and receive personalized support when you need it.',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'Informative Footers',
        description: 'Helpful links and resources to keep you informed and connected.',
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Explore Our Expat Blog"
    information={`Dive into expert articles, tips, and stories designed to support your move and life in Germany.
                        Stay informed and inspired with content tailored for expats at every stage of their journey.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Your Questions Answered"
    subtitle="Get clear, concise answers to common expat concerns and make informed decisions with confidence."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why choose xPatLife for your move?',
        description:
          'Because we provide tailored, practical guidance that simplifies your relocation and helps you thrive in Germany.',
      },
      {
        title: 'What do I need to get started?',
        description:
          'Start with our comprehensive resources covering visas, housing, employment, and more to prepare effectively.',
      },
      {
        title: 'How do I use the xPatLife website?',
        description:
          'Navigate easily through our sections to find the information and tools you need for every stage of your move.',
      },
      {
        title: 'What if I encounter challenges during my move?',
        description:
          'Our community and expert support are here to help you overcome obstacles and find solutions quickly.',
      },
      {
        title: 'Can I contribute or provide feedback?',
        description:
          'Absolutely! We welcome your input to continuously improve and expand our resources for all expats.',
      },
      {
        title: 'How often is the content updated?',
        description:
          'We regularly update our guides and articles to reflect the latest regulations and best practices.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Happy Expats', amount: '132K' },
      { title: 'Trusted Guides', amount: '24.8K' },
      { title: 'Successful Moves', amount: '10.3K' },
      { title: 'Community Members', amount: '48.4K' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Your Journey',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title"> xPatLife: Your Gateway to Germany </Fragment>

    <Fragment slot="subtitle">
      Don’t wait any longer — take the first step towards your new life in Germany today!
    </Fragment>
  </CallToAction>
</Layout>
