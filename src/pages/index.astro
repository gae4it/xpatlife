---
import Layout from '~/layouts/PageLayout.astro';
import airportImage from '~/assets/images/airport.webp';
import SmartSteuerPromoMini from '~/components/common/SmartSteuerPromoMini.astro';
import SiteSearch from '~/components/common/SiteSearch.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'xPatLife: Your Guide to Living and Working in Germany',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Read the Guide',
        href: '/guide',
        icon: 'tabler:book',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: airportImage, alt: 'xPatLife' }}
  >
    <!-- TITLE -->
    <Fragment slot="title">
      xPatLife
      <br />
      <span class="text-3xl md:text-4xl">Living and Working in Germany</span>
    </Fragment>

    <!-- SUBTITLE -->
    <Fragment slot="subtitle">
      A Practical and Legal Guide for <span class="font-semibold">Expats</span>
    </Fragment>

    <!-- SITE SEARCH -->
    <Fragment slot="content">
      <div class="mt-6 max-w-xl mx-auto">
        <SiteSearch />
      </div>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note title="Philosophy:" description="Simplicity, Best Practices and High Performance" /> -->

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Why Choose xPatLife?"
    title="Your Complete Guide to Living in Germany"
    subtitle="Everything you need to know about moving to, settling in, and thriving in Germany as an expat."
    items={[
      {
        title: 'Comprehensive Guide Sections',
        description:
          'From planning your move to daily life integration - 10+ detailed guide sections covering every aspect of expat life in Germany.',
        icon: 'tabler:book-2',
      },
      {
        title: 'Practical Immigration Advice',
        description:
          'Step-by-step guidance on visas, registration (Anmeldung), residence permits, and navigating German bureaucracy.',
        icon: 'tabler:building-airport',
      },
      {
        title: 'Healthcare & Insurance Made Simple',
        description:
          'Understand the German healthcare system, choose the right insurance, and access quality medical care.',
        icon: 'tabler:heartbeat',
      },
      {
        title: 'Housing & Accommodation Help',
        description: 'Find apartments, understand rental contracts, and learn your rights as a tenant in Germany.',
        icon: 'tabler:home',
      },
      {
        title: 'Employment & Career Resources',
        description: 'Navigate the German job market, understand work contracts, and build your career in Germany.',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Expert Blog Articles',
        description:
          'In-depth articles on taxes (SmartSteuer), banking, learning German, finding apartments, and more.',
        icon: 'tabler:article',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Inside xPatLife"
    title="What You'll Find in Our Guide"
    items={[
      {
        title: 'Planning Your Move',
        description:
          'Visa types, immigration requirements, preparation checklists, and everything you need before arriving in Germany.',
      },
      {
        title: 'First Steps in Germany',
        description:
          'Registration (Anmeldung), opening bank accounts, getting health insurance, and setting up essential services.',
      },
      {
        title: 'Daily Life & Integration',
        description:
          'Transportation, housing, education, learning German, cultural integration, and building your new life.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Guide sections overview',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        10+ Comprehensive Guide Sections
      </h3>
      Covering immigration, healthcare, housing, employment, education, transportation, finances, and more
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Financial & Tax Guidance',
        description: `Understand the German tax system, banking options, and financial planning for expats.`,
      },
      {
        title: 'Healthcare System Explained',
        description: 'Public vs. private insurance, finding doctors, understanding medical care in Germany.',
      },
      {
        title: 'Legal & Practical Resources',
        description:
          'Emergency services, document management, useful contacts, and essential resources for daily life.',
      },
      {
        title: 'Career Development',
        description:
          'Job search strategies, employment contracts, workplace culture, and professional growth in Germany.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1594450280609-3cacc7c4179f?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Financial and legal resources',
    }}
  >
    <Fragment slot="content">Complete coverage of financial, legal, and practical matters.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Learn German Effectively',
        description: 'Language learning resources, course recommendations, and practical tips for mastering German.',
      },
      {
        title: 'Navigate Transportation',
        description: "Public transport systems, getting a driver's license, understanding German traffic rules.",
      },
      {
        title: 'Find Your Home',
        description: 'Apartment hunting strategies, rental contracts explained, tenant rights, and housing resources.',
      },
      {
        title: 'Understand Taxes',
        description: `Tax declaration guides, SmartSteuer software reviews, and financial planning for expats.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1625283518288-00362afc8663?q=80&w=685&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Daily life in Germany',
    }}
  >
    <Fragment slot="content">Practical advice for everyday life in Germany.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How to Use xPatLife"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Read the Guide</span>',
        description:
          'Start with our comprehensive guide covering planning, arrival, healthcare, housing, employment, and daily life in Germany.',
        icon: 'tabler:book',
      },
      {
        title: 'Step 2: <span class="font-medium">Explore Blog Articles</span>',
        description:
          'Dive deeper into specific topics like SmartSteuer tax software, opening bank accounts, learning German, and finding apartments.',
        icon: 'tabler:article',
      },
      {
        title: 'Step 3: <span class="font-medium">Use Our Tools</span>',
        description:
          'Access practical tools and resources to help with registration, tax calculations, and everyday expat life.',
        icon: 'tabler:tools',
      },
      {
        title: 'Success!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1542596594-649edbc13630?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Steps to use xPatLife',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Guide Sections"
    subtitle="Comprehensive coverage of every aspect of expat life in Germany"
    tagline="What's Inside"
    items={[
      {
        title: 'Planning Your Move',
        description: 'Visa types, immigration requirements, and preparation before arriving.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Arrival & First Steps',
        description: 'Registration (Anmeldung), essential services, and navigating your first days.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Healthcare & Insurance',
        description: 'Understanding the German healthcare system and choosing insurance.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Housing & Accommodation',
        description: 'Finding apartments, rental contracts, and tenant rights.',
        icon: 'flat-color-icons:advertising',
      },
      {
        title: 'Employment & Career',
        description: 'Job market, work contracts, and building your professional life.',
        icon: 'flat-color-icons:business-contact',
      },
      {
        title: 'Education & Language',
        description: 'German education system and language learning resources.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'Transportation & Mobility',
        description: 'Public transport, driving licenses, and getting around Germany.',
        icon: 'flat-color-icons:gallery',
      },
      {
        title: 'Daily Life & Integration',
        description: 'Cultural integration, social networks, and everyday activities.',
        icon: 'flat-color-icons:database',
      },
      {
        title: 'Financial & Legal Matters',
        description: 'Taxes, banking, financial planning, and legal requirements.',
        icon: 'flat-color-icons:currency-exchange',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Explore Our Expat Blog"
    information={`Dive into expert articles, tips, and stories designed to support your move and life in Germany.
                        Stay informed and inspired with content tailored for expats at every stage of their journey.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Quick answers to common questions about using xPatLife and moving to Germany."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Is xPatLife free to use?',
        description:
          "Yes! All our guide sections and blog articles are completely free. We're an educational resource for expats.",
      },
      {
        title: 'Do I need to read the entire guide?',
        description:
          'No. Browse the table of contents and jump to the sections most relevant to your current needs - whether planning, arriving, or already settled.',
      },
      {
        title: 'What topics does the guide cover?',
        description:
          'Everything: visas & immigration, registration, healthcare, insurance, housing, employment, taxes, banking, transportation, language learning, and cultural integration.',
      },
      {
        title: 'Are the blog articles different from the guide?',
        description:
          'Yes. The guide provides comprehensive overviews, while blog articles dive deep into specific topics like SmartSteuer tax software, finding apartments, and opening bank accounts.',
      },
      {
        title: 'Is the information up-to-date?',
        description:
          'We regularly update our content to reflect current German laws and regulations. However, always verify critical information with official sources.',
      },
      {
        title: 'Can I contact you with questions?',
        description:
          'Use our contact page to reach out. Note that this is an educational project - we cannot provide personalized legal or professional advice.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Guide Chapters', amount: '10+' },
      { title: 'Topics Covered', amount: '50+' },
      { title: 'Blog Articles', amount: '10+' },
      { title: 'Free Resources', amount: '100%' },
    ]}
  />

  <SmartSteuerPromoMini />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Read the Guide',
        href: '/guide',
        icon: 'tabler:book',
      },
      {
        text: 'Browse Blog Articles',
        href: '/blog',
      },
    ]}
  >
    <Fragment slot="title"> Ready to Start Your Journey? </Fragment>

    <Fragment slot="subtitle">
      Explore our comprehensive guide and expert blog articles to make your move to Germany smooth and successful.
    </Fragment>
  </CallToAction>
</Layout>
