import smartsteuerLogo from '../../assets/images/smartsteuer-logo.png';
---

<div class="flex flex-col items-center gap-6 my-5 rounded-xl bg-white p-8 max-w-2xl mx-auto shadow">
  <img src={smartsteuerLogo.src} alt="SmartSteuer Logo" class="h-12 w-auto mb-2" />
  <h2 class="text-xl font-bold text-center text-blue-900 max-w-lg mx-auto mt-0 mb-2">
